<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Slider?>

<VBox fx:controller="sample.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
    <children>
        <ImageView fx:id="imageView"/>
        <Button fx:id="openButton" text="Parcourir" onAction="#ajouterClicked"/>
        <HBox fx:id="inputLayout">
            <children>
                <Button fx:id="grbButton" text="GRB" onAction="#grbClicked"/>
                <Button fx:id="nbButton" text="Noir et blanc" onAction="#nbClicked"/>
                <Button fx:id="sepiaButton" text="Sepia" onAction="#sepiaClicked"/>
                <Button fx:id="sobelButton" text="Sobel" onAction="#sobelClicked"/>
                <Button fx:id="symButton" text="Symetrie" onAction="#symClicked"/>
            </children>

        </HBox>
        <Label text="Créer un tag:"/>
        <TextField fx:id="tagField"/>
        <Button fx:id="ajouterTagButton" text="Créer un tag" onAction="#ajouterTagClicked"/>
        <Slider fx:id="slider"/>
        <HBox fx:id="filtresLayout">
        </HBox>
    </children>
</VBox>